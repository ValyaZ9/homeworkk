def read_magic_number(path: str) -> bool:
    try:
        with open('Лаба 11.txt', 'r') as f:
            first_line = f.readline().strip()
            if first_line.isdigit():
                num = int(first_line)
                if 1 <= num < 3:
                    return True
                else:
                    return False
            else:
                return False
    except Exception as e:
        raise ValueError("Error occurred while reading the file") from e
